<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6698ff"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/the_question"
            style="style/questionTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:text="welcome to my quizapp of computer related questions"
            android:textAllCaps="true"
            android:textColor="#00ff00"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/the_question_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/the_question"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="All answers would be displayed through toasts"
            android:textAllCaps="true"
            android:textColor="#00ff00"
            android:textSize="40sp" />

        <Button
            android:id="@+id/get_player_name"
            style="@style/answerTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/the_question_two"
            android:layout_centerHorizontal="true"
            android:text="Next"
            android:textAllCaps="true"
            android:layout_marginBottom="64dp"/>
    </RelativeLayout>
</ScrollView>